{
  "compilerOptions": {
    "allowJs": false,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "noEmitHelpers": true,
    "importHelpers": true,
    "strictNullChecks": false,
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": false,
    "jsx": "react",
    "skipLibCheck": true,
    "outDir": "lib",
    "lib": ["es6", "es7", "es2015", "es2015.promise", "es2015.iterable", "es2016", "es2017", "es2017.object", "scripthost", "dom"]
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "src/**/*"
  ]
}
